#include <iostream>
using namespace std;

int main() {
	//code
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int arr[n], count=1, i;
	    for(i=0; i<n; i++)
	        cin>>arr[i];
	        int max=arr[0];
	    for(i=1; i<n; i++)
	    {
	        if(arr[i]>max)
	        {
	            max=arr[i];
	            count++;
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
