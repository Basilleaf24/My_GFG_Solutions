#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	//code
	int t;
	cin>>t;
	while(t--)
	{
	    string s;
	    cin>>s;
	    
	    if(s.at(0)>=65 && s.at(0)<=90)
	    {
	        transform(s.begin(), s.end(), s.begin(), ::toupper); //toupper(u is small)
	        cout<<s;
	    }
	    else
	    {
	        transform(s.begin(), s.end(), s.begin(), ::tolower); //tolower(l is small)
	        cout<<s;
	    }
	    
	    cout<<endl;
	}
	return 0;
}
